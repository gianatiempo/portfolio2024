---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'
import BaseCard from '../base/BaseCard.astro'

const { tech, invert } = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>('/src/assets/stack/*.{svg,png}')
if (!images[tech]) throw new Error(`"${tech}" does not exist in glob: "src/assets/*.{svg,png}"`)
---

<BaseCard>
	<Image class:list={['mx-auto h-6 w-6 sm:h-10 sm:w-10 lg:h-12 lg:w-12', { 'dark:invert': invert }]} src={images[tech]()} alt={'tech'} height="128" width="128" loading="lazy" />
</BaseCard>
